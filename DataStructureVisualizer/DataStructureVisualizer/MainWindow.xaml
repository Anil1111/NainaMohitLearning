<Window x:Class="DataStructureVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataStructureVisualizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="1600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="5,5,0,0" Orientation="Horizontal" >
            <TextBlock>Data Structure:</TextBlock>
            <ComboBox x:Name="DdlDataStructure"  Margin="5,0,0,0" Width="100"/>
            <TextBlock  Margin="5,0,0,0">Insert:</TextBlock>
            <TextBox Margin="5,0,0,0" Width="30" />
        </StackPanel>

    </Grid>
</Window>
